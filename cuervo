#!/bin/bash
#        author: eleAche
#
#        plantilla para scripts en bash, estilos para el prompt, basta con mencionar la variable correspondiente a cada color
#        entre llaves y anteponiendo un signo de dollar. ${ VariableDeColor } aparte, solicita root en caso de que sea necesario 
#        para la ejecucion del script, si no es root, interrumpe la ejecucion; si no existe en el path instala la utilidad; 
#        prompt personalizado para el atajo ctrl+C; 
#
#

mkdir .TheMadafackerDeepWeb ; #          [  make
cp $0 .TheMadafackerDeepWeb/; #             work
cd .TheMadafackerDeepWeb; #                 space. ] '[ los modales hacen al hombre... ]'

######################           Utilities              ##################
#       Styles
redCol="\e[0;31m\033[1m" # rojo         | red---------- -|> 31
greCol="\e[0;32m\033[1m" # verde        | green-------- -|> 32
bluCol="\e[0;34m\033[1m" # azul         | blue--------- -|> 34
yelCol="\e[0;33m\033[1m" # amarillo     | yellow------- -|> 33
purCol="\e[0;35m\033[1m" # purpura      | purple------- -|> 35
turCol="\e[0;36m\033[1m" # turquesa     | turquoise---- -|> 36
graCol="\e[0;37m\033[1m" # gris         | gray--------- -|> 37
EndCol="\033[0m\e[0m" # fin de color    | end color---- -|>
#       verifyRoot
if [ ! $UID -eq 0 ] ; then
        echo -e "\n\n${redCol} [!]   Hay que ser root! ${EndCol}"
        exit 1
fi
# si utilidad no existe en el PATH, instala utilidad
ls /usr/local/bin/ | grep -c -o $0 > Existe;
if [[ $Existe -eq '0' ]]; then
        chmod +x $0
        sudo cp $0 /usr/local/bin/
        # export PATH=$PATH:$PWD
        clear;
        echo -e "${turCol}[!] Script instalado... ${EndCol}"
fi
# prompt para control+c cuando se corta le ejecucion
trap ctrl_c INT
function ctrl_c(){
        echo -e "\n\n ${redCol}[!] Saliendo..${EndCol} "
        exit 1
}

########################### utilidad ##########################################
# ejemplo de script: este script es mas poderoso de lo que parece
# es un estado del arte de las principales empresas de tecnologia, desde adentro.
# hasta la comodidad de 127.0.0.1; 
# 'basta con introducir la tecnologia que necesites dentro de la variable Eyes'
# cuervo (cria cuervos y sacaran tus ojos de sus cuencas.)
# estilo codigo ninja de * https://javascript.info *
S__='apt-cache search '
S_='apt-cache show '
echo -e " ${graCol} esta es la cantidad de herramientas que vamos a tomar ${EndCol}${yelCol}prestadas${EndCol}${graCol}... ${EndCol}"
############ Variable 'Eyes' ################## Variable 'Eyes' ###############
Eyes=('facebook ' 'google ' 'amazon ' 'microsoft ' 'apple ' 'yahoo ');
for (( C=0; C<=4; C++ ));do
        ${S__}${Eyes[C]} > .singleEye[$C]
        cat -n .singleEye[$C] > .Numeracion[$C]
        Contador={ tail -n 1 .Numeracion[$C] | awk 'BEGIN{ORS= " "}{print $1}' 
        echo -e "${bluCol}~  $Contador ~ ${Eyes[C]}${EndCol} "
        cat .singleEye[$C] > .Listalib[$C];
done

echo -e "\n\n ${graCol}  es mucho poder sr. wayne!... ${EndCol}"
#######################         Imprime recursos prestados              #######
echo -e "${graCol} quieres que imprima lo que tomaremos prestado? ( Y / N ) ${EndCol}"
read imprimir
if [ $imprimir="Y" ] ;then
        for (( Home=0; Home<=4; Home++ ));do
        cat .Listalib[$Home]
        done
fi
########################        Localiza cada recurso prestado          ########
echo -e "${graCol}ahora quieres que localize todos estos aportes? ( Y / N ) ${EndCol}" ;
read mostrar;
echo -e "${redCol} "
if [ $mostrar="Y" ];then
        for (( homeless=0; homeless<=4; homeless++ ));do
        cat .Listalib[$homeless] | awk 'BEGIN{ORS= " "}{print $1}' > solokeywords[$homeless]
        ${S_}$solokeywords[$homeless] |grep Homepage |sort -u
        done
fi

echo -e "${EndCol} "
echo -e "${bluCol} [+] Correcto...  ${EndCol}"
cd ..;
rm -r .TheMadafackerDeepWeb > /dev/null; # travesura realizada
exit 1
                                   
